++ FPingNormal
offset = 0%

++ FPingLarge
packetsize = 5000
offset = 50%

# --------------------------------------------------------------------------
# + FPing6
# --------------------------------------------------------------------------
#+ FPing6
#binary = /usr/bin/fping6
#offset = 40%

